<%= render 'shared/header'%>
<div class="container mt-3">
    <div class="row">
        <div class="col-12 col-sm-6">
            <%= form_for @agent do |f| %>
                <div class="form-group">
                    <%= f.label :server %>
                    <%= f.text_field :server, class:'form-control', disabled: true%>
                </div>
                <div class="form-group mb-2">
                    <%= f.label :prefix %>
                    <%= f.text_field :prefix, class:'form-control', disabled: true %>
                </div>
                <div class="form-group mb-2">
                    <%= f.label :time_config %>
                    <%= f.text_area :time_config, class:'form-control'%>
                </div>
                <div class="form-group d-flex flex-row justify-content-between">
                    <%= link_to 'Cancel', agent_path(@agent) %>
                    <%= f.submit "Generate Code", class:'btn btn-secondary'%>
                </div>
            <% end %>
        </div>
    </div>
</div>