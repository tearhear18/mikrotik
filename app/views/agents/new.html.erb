<%= render 'shared/header'%>
<div class="container mt-3">
    <div class="row">
        <div class="col-12 col-sm-6">
            <%= form_for @agent do |f| %>
                <div class="form-group">
                    <%= f.label :name, class:'label'%>
                    <%= f.text_field :name, class:'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :server %>
                    <%= f.text_field :server, class:'form-control' %>
                </div>
                <div class="form-group mb-2">
                    <%= f.label :prefix %>
                    <%= f.text_field :prefix, class:'form-control' %>
                </div>
                <div class="form-group mb-2">
                    <%= f.label :time_config %>
                    <%= f.text_area :time_config, class:'form-control', value: '{"2"=>"P 5.00|100", "4"=>"P 10.00|100", "6"=>"P 15.00|0"}' %>
                </div>
                <div class="form-group">
                    <%= f.submit "Create", class:'btn btn-secondary'%>
                </div>
            <% end %>
        </div>
    </div>
</div>